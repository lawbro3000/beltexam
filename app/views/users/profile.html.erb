
  <h2> Hi <%=@user.fname%>  </h2>
<div class="meets">
  <h2> <u>Meetups You can join</u></h2>

       <% for meetup in @group_all %>
        <p><%= meetup.name%>:  What we Do!!!    <%=meetup.description%><p>

        <%end%>




<div class="newmeetups">

<h2>Create a new Meetup</h2>
<fieldset>
   <legend>New Meetup</legend>
       <form action="/show/new" method="POST">
       <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
       <table>

           <tr>
               <td>Meetup Name:<input type="text" name="name" placeholder = "Meetup Name"></td>
           </tr>
           <tr>
               <td>Description <input type="text" name="description" placeholder = "Description" ></td>
           </tr>
           <tr>
                 <td><input type="submit" value="new"> </td>
           </tr>
       </table>
       </form>
</fieldset>



</div>
